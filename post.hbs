{{!< default}}

{{#post}}
  {{> page-header }}

  <hr>

  <article class='{{ post_class }}'>
    {{ content }}
  </article>

  {{#if tags}}
    {{ tags separator=', ' }}
  {{/if}}

  {{#if comments}}
    <hr>
    {{comments title="Join the club"
            count=false
            mode="auto"
            saturation=80}}
  {{/if}}
{{/post}}